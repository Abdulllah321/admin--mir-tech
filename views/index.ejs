<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/style.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 20px;
            color: #333;
            text-align: center;
            font-size: 2rem;
        }

        .logout-button {
            display: inline-block;
            margin: 10px 0;
            padding: 10px 20px;
            background: #dc3545;
            color: #fff;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
        }

        .logout-button:hover {
            background: #c82333;
        }

        .admin-list,
        .project-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-item,
        .project-item {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .admin-item span {
            font-size: 1rem;
            color: #333;
        }

        .project-item a {
            font-size: 1.1rem;
            color: #333;
            text-decoration: none;
        }

        .project-item a:hover {
            text-decoration: underline;
        }

        .project-item button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.2rem;
            margin-left: 10px;
        }

        .edit-icon {
            color: #28a745;
        }

        .delete-icon {
            color: #dc3545;
        }

        .delete-icon:hover {
            color: #c82333;
        }

        .admin-section,
        .project-section {
            margin-bottom: 40px;
        }

        .add-project-button {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background: #007bff;
            color: #fff;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            text-align: center;
        }

        .add-project-button:hover {
            background: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Admin Dashboard</h1>

        <!-- Logout Button -->
        <a href="/admin/logout" class="logout-button">Logout</a>

        <!-- Admin List -->
        <div class="admin-section">
            <h2>Admins</h2>
            <ul class="admin-list">
                <% admins.forEach(admin=> { %>
                    <li class="admin-item">
                        <span>
                            <%= admin.username %>
                        </span>
                    </li>
                    <% }) %>
            </ul>
        </div>

        <!-- Add Project Button -->
        <a href="/project-form" class="add-project-button">Add New Project</a>

        <!-- Project List -->
        <div class="project-section">
            <h2>Projects</h2>
            <ul class="project-list">
                <% projects.forEach(project=> { %>
                    <% if (!project.deleted) { %>
                        <li class="project-item">
                            <a href="/projects/<%= project._id %>">
                                <%= project.title %>
                            </a>
                            <div>
                                <a href="/project-form/<%= project._id %>" class="edit-icon" title="Edit">
                                    <i class="fa fa-edit"></i>Edit
                                </a>
                                <button class="delete-icon" onclick="confirmDelete('<%= project._id %>')">
                                    <i class="fa fa-trash"></i>Delete
                                </button>
                            </div>
                        </li>
                        <% } %>
                            <% }) %>
            </ul>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        function confirmDelete(projectId) {
            if (confirm('Are you sure you want to delete this project?')) {
                fetch(`/projects/${projectId}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete the project.');
                    }
                });
            }
        }
    </script>
</body>

</html>